<%= simple_form_for @virtual_cheque, remote: true do |f| %>
  <div class="row">
    <div class="col s12">
      <%= f.error :base %>
    </div>

    <div class="form-elements">
      <div class="col s12">
        <%= f.input :recipient_name %>
      </div>

      <div class="col s6">
        <%= f.input :date, as: :string, input_html: { class: 'datepicker' } %>
      </div>

      <div class="col s6">
        <%= f.input :amount, as: :decimal %>
      </div>
    </div>

    <div class="view-elements">
      <div class="col s12">
        <%= @virtual_cheque.recipient_name %>
      </div>


      <div class="col s6">
        <%= @virtual_cheque.date %>
      </div>


      <div class="col s6">
        <%= number_to_currency(@virtual_cheque.amount) %>
      </div>

      <div class="col s12">
        <%= @virtual_cheque.amount_in_words %>
      </div>
    </div>
  </div>

  <div class="modal-footer">
    <div class="left">
      <a href="#" id="cancel" class="btn waves-effect waves-teal">Cancel</a>
    </div>
    <%= f.button :submit, 'Generate Virtual Cheque', remote: true,
        class: 'waves-effect waves-light', id: 'create_virtual_cheque' %>
  </div>
<% end %>


<!--separate input from view; input up and view down as divs-->
